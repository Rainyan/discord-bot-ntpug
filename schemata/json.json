{
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "description": { "type": "string" },
    "keywords": { "type": "array" },
    "website": { "type": "string" },
    "repository": { "type": "string" },
    "env": {
      "type": "object",
      "patternProperties": {
        "(.*?)": {
          "type": "object",
          "patternProperties": {
            "(.*?)": { "type": "string" }
          }
        }
      }
    },
    "formation": {
      "type": "object",
      "properties": {
        "worker": {
          "type": "object",
          "properties": {
            "quantity": {
              "type": "integer",
              "minimum": 1
            },
            "size": { "type": "string" }
          }
        }
      }
    },
    "addons": {
      "type": "object",
      "patternProperties": {
        "plan": { "type": "string" }
      }
    }
  }
}
